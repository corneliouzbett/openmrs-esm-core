{
  "name": "@openmrs/esm-styleguide",
  "version": "1.4.0",
  "license": "MPL-2.0",
  "description": "The styleguide for OpenMRS SPA",
  "browser": "dist/openmrs-esm-styleguide.js",
  "main": "src/index.js",
  "source": true,
  "scripts": {
    "start": "webpack-dev-server --mode=development",
    "start-https": "webpack-dev-server --mode=development --https",
    "storybook": "start-storybook --port 7000",
    "build-storybook": "build-storybook",
    "lint": "eslint src",
    "build": "webpack",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "directories": {
    "lib": "dist"
  },
  "browserslist": [
    "extends browserslist-config-openmrs"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && concurrently 'npm:test' 'npm:lint'"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openmrs/openmrs-esm-styleguide.git"
  },
  "keywords": [
    "openmrs",
    "styleguide"
  ],
  "bugs": {
    "url": "https://github.com/openmrs/openmrs-esm-styleguide/issues"
  },
  "homepage": "https://github.com/openmrs/openmrs-esm-styleguide#readme",
  "dependencies": {},
  "peerDependencies": {
    "react": "16.x",
    "rxjs": "6.x"
  },
  "devDependencies": {
    "@pickra/copy-code-block": "^1.1.7",
    "@storybook/addon-a11y": "^5.2.1",
    "@storybook/addon-knobs": "^5.2.1",
    "@storybook/html": "^5.2.1",
    "highlight.js": "^9.15.10",
    "kremling": "^2.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rxjs": "^6.5.3",
    "systemjs-webpack-interop": "^2.1.2"
  }
}
